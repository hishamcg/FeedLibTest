<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_top_line">
    <LinearLayout
        android:id="@+id/LL_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:id="@+id/like"
            android:src="@drawable/ic_action_heart_o"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:id="@+id/comment"
            android:src="@drawable/ic_action_chat_o"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:id="@+id/share"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_action_share_o" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:id="@+id/overflow"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_action_overflow_o" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/RL_feed_action_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_orange"
        android:visibility="gone"
        android:clickable="true"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@+id/LL_actions"
        android:layout_alignTop="@+id/LL_actions">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Subscription ends in 6 days"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/feed_action_text"/>
        <Button
            android:id="@+id/feed_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/feed_action_text"
            android:background="@drawable/dark_grey_container"
            android:text="Renew?"
            android:textColor="#fff"
            android:textSize="14dp"/>
        <ImageView
            android:id="@+id/feed_action_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/cross_icon"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/RL_rate_cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="gone"
        android:clickable="true"
        android:layout_alignBottom="@+id/LL_actions"
        android:layout_alignTop="@+id/LL_actions"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please rate and review us"
            android:paddingRight="5dp"
            android:textSize="14dp"
            android:id="@+id/feed_rate_text"/>
        <RatingBar
            android:id="@+id/MyRating"
            style="?android:attr/ratingBarStyleSmall"
            android:background="@drawable/container_orange"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4"/>
    </LinearLayout>
</RelativeLayout>