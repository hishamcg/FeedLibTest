<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:strata="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        strata:navigationIcon="@drawable/fm_logo"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#009688" />
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/btm_action"
        android:background="#fff">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:weightSum="1">
            <com.andreabaccega.widget.FormEditText
                strata:emptyErrorString="Topic cannot be blank"
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#a111"
                android:hint="Title"/>

            <EditText
                android:id="@+id/edit_tag"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:editable="false"
                android:textColor="@color/holo_blue_bright"
                android:hint="Select Business"/>
            <LinearLayout
                android:id="@+id/edit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/date_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/ui_text_gray"
                        android:text="12 jan"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/date_from_48"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/date_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/ui_text_gray"
                        android:text="12 jan"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/date_from_48"/>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/image"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="170dp"
                android:adjustViewBounds="true"
                android:src="@drawable/book_cover"/>
            <EditText
                android:id="@+id/edit_content"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:inputType="textMultiLine"
                android:textColor="@color/ui_text_gray"
                android:hint="Enter Feed Content"/>
            <EditText
                android:id="@+id/edit_link"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:inputType="textUri"
                android:textColor="@color/holo_blue_bright"
                android:hint="Enter Redirect Url"/>
            <EditText
                android:id="@+id/edit_quote"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="@color/holo_blue_bright"
                android:hint="Enter quote"/>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/btm_action"
        layout="@layout/create_feed_bottom_action"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_below="@+id/toolbar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/container_shadow"
        android:visibility="gone"
        android:layout_margin="10dip"/>
    <LinearLayout
        android:id="@+id/testFragment"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
</RelativeLayout>